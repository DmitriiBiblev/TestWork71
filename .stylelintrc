{
  "extends": [
    "stylelint-config-standard-scss"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "order/properties-order": [
      [
        "content",
        "width",
        "min-width",
        "max-width",
        "height",
        "min-height",
        "max-height",
        "font",
        "font-family",
        "font-size",
        "line-height",
        "font-weight",
        "letter-spacing",
        "color",
        "text-decoration",
        "background",
        "padding",
        "padding-top",
        "padding-right",
        "padding-bottom",
        "padding-left",
        "border",
        "border-width",
        "border-style",
        "border-color",
        "border-top",
        "border-right",
        "border-bottom",
        "border-left",
        "border-radius",
        "margin",
        "margin-top",
        "margin-right",
        "margin-bottom",
        "margin-left",
        "display",
        "flex",
        "flex-grow",
        "flex-shrink",
        "flex-basis",
        "flex-direction",
        "flex-wrap",
        "justify-content",
        "align-items",
        "align-self",
        "align-content",
        "grid-template-columns",
        "grid-template-rows",
        "grid-template-areas",
        "grid-auto-columns",
        "grid-auto-rows",
        "grid-auto-flow",
        "grid-column",
        "grid-column-start",
        "grid-column-end",
        "grid-row",
        "grid-row-start",
        "grid-row-end",
        "gap",
        "row-gap",
        "column-gap",
        "transition",
        "cursor"
      ],
      {
        "unspecified": "bottomAlphabetical"
      }
    ]
  }
}
